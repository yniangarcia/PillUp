<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upf.pillup.HOME_ICONS.Profile"
    android:background="@color/fondo"
    >

    <ImageView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/todo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/Name"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:hint="Nombre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/Surname"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:hint="Apellidos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/FechaNacimiento"
        android:layout_width="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:hint="Fecha de nacimiento"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Surname" />

    <Spinner
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/Gender"
        android:layout_marginTop="4dp"
        android:scrollbarSize="22dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FechaNacimiento" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/UserEmail"
        android:layout_width="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:hint="@string/cambiar_e_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Gender" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/Password"
        android:layout_width="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:hint="Cambiar contraseÃ±a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserEmail" />

    <MultiAutoCompleteTextView
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/DataHealth"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password" />

</android.support.constraint.ConstraintLayout>
