<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upf.pillup.HOME_ICONS.Profile"
    android:background="@color/fondo">

    <ImageButton
        android:id="@+id/user"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/fondo"
        app:srcCompat="@drawable/ye" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/Name"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/Surname"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:hint="Apellidos"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/FechaNacimiento"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:hint="Fecha de nacimiento"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Surname" />

    <Spinner
        android:gravity="center"
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="60dp"
        android:scrollbarSize="22dp"
        android:textColor="#000000"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FechaNacimiento" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/UserEmail"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:inputType="textEmailAddress"
        android:hint="@string/cambiar_e_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Gender" />

    <EditText
        style="@style/profile_button"
        android:gravity="center"
        android:id="@+id/Password"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:inputType="textPassword"
        android:hint="Cambiar contraseÃ±a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserEmail" />

    <Button
        android:id="@+id/save"
        style="@style/button_style"
        android:layout_margin="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="8dp"
        android:text="@string/guardar"
        android:textAlignment="center"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password" />

</android.support.constraint.ConstraintLayout>
